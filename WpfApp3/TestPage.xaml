<Window x:Class="WpfApp3.TestPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="TestPage" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.1*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border CornerRadius="10 0 0 10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#3AA9" Offset="0"/>
                    <GradientStop Color="LightGray" Offset="0"/>
                </LinearGradientBrush>

            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="75"/>
                    <RowDefinition Height="63"/>
                    <RowDefinition Height=" *"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Border Background="LightSteelBlue">
                    <Label Content ="Sample paper" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" Height="65" Width="169" FontStyle="Normal" FontWeight="Bold"/>
                </Border>
                <Border Grid.Row="1" Background="LightGray">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2.1*"/>
                            <ColumnDefinition Width="2.5*"/>
                            <ColumnDefinition Width="1.8*"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="LightGray">
                            <Label Content="QuestionId   :" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center"></Label>
                        </Border>
                        <Border Background="LightGray" Grid.Column="1">
                            <Label x:Name="questionId"  HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" />
                        </Border>
                        <Border Background="LightGray" Grid.Column="2" >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Label Content="TimeLeft:"/>
                                </Border>
                                <Border Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Label x:Name="currTime" ></Label>
                                </Border>
                            </Grid>
                            
                        </Border>
                    </Grid>
                    
                </Border>
                <Border Grid.Row="2">
                    <StackPanel Background="White">
                        <Label x:Name="P1" />
                        <RadioButton Visibility ="Visible" x:Name="otp1"/>
                        <RadioButton Visibility ="Visible" x:Name="otp2"/>
                        <RadioButton Visibility ="Visible" x:Name="otp3"/>
                        <RadioButton Visibility ="Visible" x:Name="otp4"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="3" Background="LightGray">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width=" *"/>

                        </Grid.ColumnDefinitions>
                        <Border BorderThickness ="0">
                            
                                <Button x:Name="isPrevious" Content="Previous" Click="Previous" IsEnabled="True" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" FontWeight="Bold" Background="Green" ></Button>
                           
                        </Border>
                        <Border BorderThickness="0" Grid.Column="1">
                            <Button x:Name="isNext" Content="Next" HorizontalAlignment="Center" IsEnabled="True" VerticalAlignment="Center" FontSize="10" FontWeight="Bold" Background="Green" Click="Next"></Button>
                        </Border>
                        <Border BorderThickness="0" Grid.Column="2">
                            <Button Content="Save/Next" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" FontWeight="Bold" Background="Green" Click="SaveandNext"></Button>
                        </Border>
                        <Border BorderThickness="0" Grid.Column =" 3">
                            <Button Content="ClearResponse" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" FontWeight="Bold" Background="Green" Click="clear"></Button>

                        </Border>
                    </Grid>
                </Border>
            </Grid>

        </Border>
        <Border Background="LightSkyBlue" Grid.Column="1" CornerRadius=" 0 10 10 0" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="75"/>
                    <RowDefinition Height="63"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Background="Red">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width=" 1.1*"/>
                            <ColumnDefinition Width=" *"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="SteelBlue">
                            <Label Content="CandidateId :" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight ="Bold" FontSize="20"/>
                        </Border>
                        <Border Grid.Column="1" Background="SteelBlue">
                            <Label x:Name="UserId" FontStyle="Normal" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
                        </Border>
                    </Grid>
                </Border>
                <Border Grid.Row="1" Background="Azure">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width=" 1*"/>
                            <ColumnDefinition Width=" 1*"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="BlueViolet">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition  Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Background="Azure" BorderThickness="0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width=" 1*"/>
                                            <ColumnDefinition Width=" 1*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Background="white">
                                            <Label Content="NotAnswer :"  HorizontalAlignment="Center" Margin="0,0,0,0"  />
                                        </Border>
                                        <Border Background="white" Grid.Column=" 1" >
                                            <Label x:Name="NotAnswered" Height="50"></Label>
                                        </Border>
                                    </Grid>
                                    
                                </Border>
                                <Border Background="white" Grid.Row="1" BorderThickness ="0" Height="33" VerticalAlignment="Top">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width ="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Background="White" >
                                            <Label Content="Answer:" HorizontalAlignment="Center" Margin="0,0,0,0" ></Label>
                                        </Border>
                                        <Border Background="White" Grid.Column="1">
                                            <Label x:Name="Answered" Height="50"></Label>
                                        </Border>
                                        
                                    </Grid>
                                </Border>
                                
                            </Grid>
                        </Border>
                        <Border Background="white"  Grid.Column="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="White">
                                    <Label Content="VistedQ:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Column="1" Background="White">
                                    <Label x:Name="IsVisted" HorizontalAlignment="Left" VerticalAlignment="Center"></Label>
                                </Border>
                            </Grid>
                            
                        </Border>
                    </Grid>

                </Border>
                <Border Grid.Row="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <Border Background="LightGray" CornerRadius="50">
                            <ScrollViewer x:Name="MyScrollViewer" 
                VerticalScrollBarVisibility="Auto">
                                <WrapPanel x:Name="Buttonpanel" Background= "LightGray" ItemWidth ="60">
                                 

                                </WrapPanel>
                            </ScrollViewer>

                        </Border>
                        <Border Background="White" Grid.Row="1" >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width=" 1*"/>
                                    <ColumnDefinition Width=" 1*"/>
                                </Grid.ColumnDefinitions>
                                <Border>
                                    <Button Content="SaveAndExit"  Background="Green" HorizontalAlignment="Center" VerticalAlignment="Center" Click="SaveandExit" ></Button>
                                </Border>
                                <Border Grid.Column="1">
                                    <Button Content="Pause"  Background="Green" HorizontalAlignment="Center" VerticalAlignment="Center" Click="pause" ></Button>
                                </Border>
                            </Grid>
                            
                        </Border>
                        
                    </Grid>




                </Border>
            </Grid>

        </Border>

    </Grid>
</Window>
