<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="quesTxt" HorizontalAlignment="Left" Margin="200,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="491" Height="22" RenderTransformOrigin="-0.39,-1.549"/>
        <Label Content="Questions" HorizontalAlignment="Left" Margin="27,41,0,0" VerticalAlignment="Top" Height="26" Width="57"/>
        <Label Content="Option1" HorizontalAlignment="Left" Margin="31,90,0,0" VerticalAlignment="Top"/>
        <Label Content="Option2" HorizontalAlignment="Left" Margin="31,143,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.199,2.956"/>
        <Label Content="Option3" HorizontalAlignment="Left" Margin="31,191,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.727,2.715"/>
        <Label Content="Option4" HorizontalAlignment="Left" Margin="27,248,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.447,-0.006"/>

        <TextBox x:Name="option1" HorizontalAlignment="Left" Margin="200,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="246" Height="26" RenderTransformOrigin="-3.358,0.153"/>
        <TextBox x:Name="option2" HorizontalAlignment="Left" Margin="200,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218" Height="31"/>
        <TextBox x:Name="option3" HorizontalAlignment="Left" Margin="200,191,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="246" Height="34"/>
        <TextBox x:Name="option4" HorizontalAlignment="Left" Margin="200,256,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" Height="21"/>

        <Button Content="AddQuestion " HorizontalAlignment="Left" Margin="115,339,0,0" VerticalAlignment="Top" Height="48" Width="285" Click="ADD"/>
        <Label Content="Solution" HorizontalAlignment="Left" Margin="27,298,0,0" VerticalAlignment="Top" Width="91"/>
        <TextBox x:Name ="Solution" HorizontalAlignment="Left" Margin="189,297,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="300"/>
    </Grid>
</Window>
