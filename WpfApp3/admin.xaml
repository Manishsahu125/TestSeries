<Window x:Class="WpfApp3.admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="admin" Height="450" Width="800">
    <Grid>
        <Border Background="LightSkyBlue"></Border>
        <TextBlock Text="login for exam" HorizontalAlignment="Center" Margin="70" Width="200" FontSize="20" FontStyle="Oblique" FontWeight="Bold"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="LightGray">
            <Label Content="Username:"/>
            <TextBox x:Name="UsernameTextBox" Width="200"/>
            <Label Content="Password:"/>
            <PasswordBox x:Name="PasswordBox" Width="200"/>
            <Button Content="User/Admin" Click="Button_Click" Width="100" Margin="0,20,0,0"/>
        </StackPanel>

    </Grid>
</Window>
